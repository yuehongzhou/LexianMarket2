<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="13dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/jiaqi_id"
            android:textSize="13sp"
            android:layout_marginLeft="13dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_jiaqi_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/carno"
            android:textSize="13sp"
            android:layout_marginLeft="13dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_carno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/jiaqi_amount"
            android:textSize="13sp"
            android:layout_marginLeft="13dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_jiaqi_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/creation_date"
            android:textSize="13sp"
            android:layout_marginLeft="13dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_jiaqi_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/total_price"
            android:textSize="13sp"
            android:layout_marginLeft="13dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/payWay"
            android:textSize="13sp"
            android:layout_marginLeft="13dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_payWay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/pay_date"
            android:textSize="13sp"
            android:layout_marginLeft="13dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_pay_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
</LinearLayout>